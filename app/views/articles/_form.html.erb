<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title, :class => 'form_heading' %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body, :class => 'form_heading' %><br>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :tag_list, :class => 'form_heading' %><br>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<% if @article.image.exists? %>
			<%= image_tag @article.image.url %><br>
			<%= f.label :image, "Attach a New Image", :class => 'form_heading' %><br>
			<%= f.file_field :image %>
		<% else %>
			<%= f.label :image, "Attach an Image", :class => 'form_heading' %><br>
			<%= f.file_field :image %>
		<% end %>
	<p>
		<%= f.submit 'Submit', :class => 'submit' %>
	</p>
<% end %>