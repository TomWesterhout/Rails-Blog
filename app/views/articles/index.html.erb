<% @articles.each do |article| %>
	<div class="article">
		<div class="title">
			<%= link_to article.title, article_path(article), class: "article_title", id: "article_#{article.id}" %>
		</div>
		<hr>
		<div class="body">
			<%= link_to truncate(article.body, length: 280), article_path(article) %>
		</div>
		<div class="view">
			<p><%= "Views: #{article.view_count}" %></p>
			<p> | </p>
			<p><%= "Created at: #{article.created_at.strftime("%d %b %Y")}" %></p>
		</div>
	</div>
<% end %>