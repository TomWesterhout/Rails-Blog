<div class="tags">
	<p><span class="tags_title">All Tags</span></p>
	<hr>
		<% @tags.each do |tag| %>
			<p>
				<%= link_to tag.name, tag_path(tag) %>
				<% if logged_in? %>
					<%= link_to " | delete", tag_path(tag), method: :delete, data: {confirm: "Are you sure you 	want to delete this tag?"} %>
				<% end %>
			</p>
		<% end %>
	<br>
</div>
